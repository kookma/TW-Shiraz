\procedure alert(type:"primary" src:"", width:"100%", class:"", mode:"inline") 
<div data-bs-theme=<<color-scheme>> class=`alert alert-$(type)$ $(class)$` style=`width:$(width)$;`>
<$transclude $variable="src" $mode=<<mode>> />
</div>
\end alert

\procedure alert-leftbar(type:"primary", src:"", width:"100%", class:"", mode:"inline") 
<div data-bs-theme=<<color-scheme>> class=`alert alert-$(type)$ border-$(type)$ leftbar $(class)$` style=`width:$(width)$;`>
<$transclude $variable="src" $mode=<<mode>> />
</div>
\end
